{
    "type": "object",
    "additionalProperties": false,
    "required": ["Job Type", "Timestamp", "Driver", "Sprayer", "Farmer", "Crop", "Hectares", "Litres/ha"],
    "properties": {
        "Job Type": {
            "type": "string",
            "const": "Spraying",
            "hidden": true
        },
        "Timestamp": {
            "type": "integer",
            "hidden": true
        },
        "Driver": {
            "type": "string",
            "pattern": "^[a-zA-z ]+$",
            "placeholder": "Enter your name",
            "error": "Please use only letters and spaces"
        },
        "Sprayer" : {
            "type": "string",
            "enum": ["RB16", "RB26", "RB35"]
        },
        "Farmer": {
            "type": "string",
            "pattern": "^[a-zA-z ]+$",
            "placeholder": "Enter customer's name",
            "error": "Please use only letters and spaces"
        },
        "Crop": {
            "type": "string",
            "pattern": "^[a-zA-z ]+$",
            "error": "Please use only letters and spaces"
        },
        "Hectares": {
            "type": "number",
            "min": 1,
            "error": "Please enter a positive number"
        },
        "Litres/ha": {
            "type": "string",
            "enum": [
                "200",
                "201-250",
                "251-300",
                "301-350",
                "351-400",
                "401-450",
                "451-500"
            ]
        }
    }
}
